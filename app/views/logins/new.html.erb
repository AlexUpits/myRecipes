

    <div class="row">
        <div class="col-md-6 col-md-offset-3 form-horizontal chef" >
            <%= form_tag '/login' do %>
            
                <div class="form-group">
                    <div class="col-lg-10">
                        <%= label_tag :email %>
                    </div>
                    <div class="col-lg-10">
                        <%= email_field_tag :email %>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10">
                        <%= label_tag :password %>
                    </div>
                    <div class="col-lg-10">
                        <%= password_field_tag :password%>
                    </div>
                </div>
                
                
                
                
                <%= submit_tag 'Login', class: 'btn btn-default' %>
            <% end %>
        </div>
    </div>
    
