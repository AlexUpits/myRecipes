<div class="container">
    
    <div class="col-md-12 m-b-lg">
      <div class="panel panel-default panel-profile m-b-0">
        <div class="panel-heading" style="background-image: url(<%= @recipe.picture.url %>);"></div>
        
        <div class="panel-body text-center">
          <%= link_to gravatar_for(@recipe.chef, size: 50), chef_path(@recipe.chef) %>
          <h2><%= @recipe.name %></h2>
          <p class="m-b"><%= @recipe.summary %></p>
          <hr/>
          <p><strong><%= simple_format(@recipe.description) %></strong></p>
          <div class="pull-right">
            <div class="col-md-4">
              <%= link_to like_recipe_path(@recipe, like: true), method: :post do %>
                <i class="glyphicon glyphicon-thumbs-up"></i><%= @recipe.thumbs_up_total %>
              <% end %>
            </div>
            <div class="col-md-4">
              <%= link_to like_recipe_path(@recipe, like: false), method: :post do %>
                <i class="glyphicon glyphicon-thumbs-down"></i><%= @recipe.thumbs_down_total %>
              <% end %>  
            </div>
          </div>
        </div>
      </div>
    </div> 
</div>