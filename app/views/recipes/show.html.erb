<div class="container">
    
    <div class="col-md-12 m-b-lg">
      <div class="panel panel-default panel-profile m-b-0">
        <div class="panel-heading" style="background-image: url(//cdn.shopify.com/s/files/1/0691/5403/t/121/assets/insta-2.jpg?3719080539427352740);"></div>
        <div class="panel-body text-center">
          <%= gravatar_for @recipe.chef, size: 50 %>
          <h2><%= @recipe.name %></h2>
          <p class="m-b"><%= @recipe.summary %></p>
          <hr/>
          <p><%= @recipe.description %></p>
          <p>
            <spam><small><%= time_ago_in_words(@recipe.created_at) %></small></spam>
          </p>
          
          <a href="//github.com/fat" target="_blank" class="btn btn-primary-outline btn-sm m-b">
            <span class="icon icon-add-user"></span> View Recipe
          </a>
          
        </div>
      </div>
    </div> 
    
    
    
    
    
</div>